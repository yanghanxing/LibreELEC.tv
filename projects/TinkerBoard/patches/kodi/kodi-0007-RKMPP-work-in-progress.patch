+
+    if (g_advancedSettings.CanLogComponent(LOGVIDEO))
+      CLog::Log(LOGDEBUG, "%s::%s - render update video hook %p drmprime:%p pts:%" PRId64, CLASSNAME, __FUNCTION__, this, info, info->GetPTS());
